{
  "$schema": "http://json.schemastore.org/template",
  "author": "Critical Manufacturing",
  "classifications": [
    "cli"
  ],
  "description": "Generate a new IoT Task package",
  "name": "IoT Task",
  "identity": "cmf-cli.new.iot.task",
  "groupIdentity": "cmf-cli.new.iot",
  "shortName": "iot-task",
  // You can create the project using this short name instead of the one above.
  "tags": {
    "language": "Typescript",
    "type": "project"
  },
  "sourceName": "IoT.Package",
  "preferNameDirectory": true,
  "symbols": {
    "taskName": {
      "type": "parameter",
      "datatype": "string",
      "description": "The task name",
      "displayName": "Task Name",
      "fileRename": "%taskname%",
      "replaces": "<%= $CLI_PARAM_TaskName %>"
    },
    "className": {
      "type": "parameter",
      "datatype": "string",
      "description": "Class Name",
      "displayName": "Class Name",
      "replaces": "<%= $CLI_PARAM_ClassName %>"
    },
    "settingDefaults": {
      "type": "parameter",
      "datatype": "string",
      "description": "Setting Defaults",
      "displayName": "Setting Defaults",
      "replaces": "<%= $CLI_PARAM_SettingsDefaults %>"
    },
    "testSettingDefaults": {
      "type": "parameter",
      "datatype": "string",
      "description": "Test Setting Defaults",
      "displayName": "Test Setting Defaults",
      "replaces": "<%= $CLI_PARAM_TestSettingsDefaults %>"
    },
    "inputsInterface": {
      "type": "parameter",
      "datatype": "string",
      "description": "Inputs Interface",
      "displayName": "Inputs Interface",
      "replaces": "<%= $CLI_PARAM_InputsInterface %>"
    },
    "outputsInterface": {
      "type": "parameter",
      "datatype": "string",
      "description": "Outputs Interface",
      "displayName": "Outputs Interface",
      "replaces": "<%= $CLI_PARAM_OutputsInterface %>"
    },
    "settingsInterface": {
      "type": "parameter",
      "datatype": "string",
      "description": "Settings Interface",
      "displayName": "Settings Interface",
      "replaces": "<%= $CLI_PARAM_SettingsInterface %>"
    },
    "isProtocol": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Is Protocol Setting",
      "displayName": "Is Protocol Setting"
    }
  }
}