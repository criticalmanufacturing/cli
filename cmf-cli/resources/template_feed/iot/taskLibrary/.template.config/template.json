{
  "$schema": "http://json.schemastore.org/template",
  "author": "Critical Manufacturing",
  "classifications": [
    "cli"
  ],
  "description": "Generate a new IoT Task Library package",
  "name": "IoT Task Library Package",
  "identity": "cmf-cli.new.iot.tasklibrary",
  "groupIdentity": "cmf-cli.new.iot",
  "shortName": "iot-taskLibrary",
  // You can create the project using this short name instead of the one above.
  "tags": {
    "language": "Typescript",
    "type": "project"
  },
  "sourceName": "IoT.Package",
  "preferNameDirectory": true,
  "symbols": {
    "directoryName": {
      "type": "parameter",
      "datatype": "string",
      "description": "The package directory name",
      "displayName": "Directory Name",
      "fileRename": "%directoryname%"
    },
    "npmRegistry": {
      "type": "parameter",
      "datatype": "string",
      "description": "NPM Registry",
      "displayName": "NPM Registry",
      "replaces": "<%= $CLI_PARAM_NPMRegistry %>"
    },
    "identifier": {
      "type": "parameter",
      "datatype": "string",
      "description": "Package Identifier",
      "displayName": "Package Identifier",
      "replaces": "<%= $CLI_PARAM_Identifier %>"
    },
    "identifierLower": {
      "type": "parameter",
      "datatype": "string",
      "description": "Package Identifier to Lower Case",
      "displayName": "Package Identifier to Lower Case",
      "replaces": "<%= $CLI_PARAM_IdentifierLower %>"
    },
    "packageName": {
      "type": "parameter",
      "datatype": "string",
      "description": "Name of Package",
      "displayName": "Package Name",
      "replaces": "<%= $CLI_PARAM_PackageName %>"
    },
    "packageVersion": {
      "type": "parameter",
      "datatype": "string",
      "description": "The custom package version",
      "displayName": "Package Version",
      "replaces": "<%= $CLI_PARAM_PackageVersion %>"
    },
    "targetSystemVersionProcessed": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "<%= $CLI_PARAM_TargetSystemVersionProcessed %>"
    },
    "dependsOnScope": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "<%= $CLI_PARAM_DependsOnScope %>"
    },
    "mandatoryForScope": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "<%= $CLI_PARAM_MandatoryForScope %>"
    },
    "dependsOnProtocol": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "<%= $CLI_PARAM_DependsOnProtocol %>"
    },
    "mandatoryForProtocol": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "<%= $CLI_PARAM_MandatoryForProtocol %>"
    }
  }
}