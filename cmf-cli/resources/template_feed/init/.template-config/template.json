{
  "$schema": "http://json.schemastore.org/template",
  "author": "Critical Manufacturing",
  "classifications": [ "cli" ],
  "description": "Initialize a new repository",
  "name": "Initialize Repository",
  "identity": "cmf-cli.init",
  "groupIdentity": "cmf-cli.init",
  "shortName": "init", // You can create the project using this short name instead of the one above.
  "tags": {
    "language": "C#", // Specify that this template is in C#.
    "type": "project"
  },
  "sourceName": "init_", // Will replace the string 'MyProject.StarterWeb' with the value provided via -n.
  "preferNameDirectory": false,
  "symbols": {
    // from infra?
    "nugetRegistry": {
      "type": "parameter",
      "datatype": "string",
      "description": "The NuGet registry that contains the MES packages",
      "defaultValue": "",
      "displayName": "NuGet Registry",
      "replaces": "<%= $CLI_PARAM_NuGetRegistry %>"
    },
    
    // arguments
    "projectName": {
      "type": "parameter",
      "datatype": "string",
      "description": "The name of our project",
      "defaultValue": "",
      "displayName": "Project Name",
      "replaces": "<%= $CLI_PARAM_ProjectName %>"
    },
    "customPackageName": {
      "type": "parameter",
      "datatype": "string",
      "description": "The custom package name",
      "defaultValue": "",
      "displayName": "Package Name",
      "replaces": "<%= $CLI_PARAM_CustomPackageName %>"
    },
    
    // from config
    "EnvironmentName": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_EnvironmentName %>"
    },
    "RESTPort": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_RESTPort %>"
    },
    "Tenant": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_Tenant %>"
    },
    "vmHostname": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_vmHostname %>"
    },
    "DBReplica1": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_DBReplica1 %>"
    },
    "DBReplica2": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_DBReplica2 %>"
    },
    "DBServerOnline": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_DBServerOnline %>"
    },
    "DBServerODS": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_DBServerODS %>"
    },
    "DBServerDWH": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_DBServerDWH %>"
    },
    "ReportServerURI": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_ReportServerURI %>"
    },
    "AlwaysOn": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "replaces": "<%= $CLI_PARAM_AlwaysOn %>"
    },
    "InstallationPath": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_InstallationPath %>"
    },
    "DBBackupPath": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_DBBackupPath %>"
    },
    "TemporaryPath": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_TemporaryPath %>"
    },
    "HTMLPort": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_HTMLPort %>"
    },
    "IsSslEnabled": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "replaces": "<%= $CLI_PARAM_IsSslEnabled %>"
    },
    "GatewayPort": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_GatewayPort %>"
    },
    "ReleaseEnvironmentConfig": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "",
      "replaces": "<%= $CLI_PARAM_ReleaseEnvironmentConfig %>"
    }
  }
}