{
  "packageId": "<%= $CLI_PARAM_CustomPackageName %>",
  "version": "<%= $CLI_PARAM_CustomPackageVersion %>",
  "description": "Cmf Custom <%= $CLI_PARAM_Tenant %> <%= $CLI_PARAM_CustomPackageName %> Package",
  "packageType": "Help",
  "isInstallable": true,
  "isUniqueInstall": false,
  "contentToPack": [
    {
      "source": "src/packages/*",
      "target": "node_modules",
      "ignoreFiles": [
        ".npmignore"
      ]
    }
  ],
  "xmlInjection": ["<%= $CLI_PARAM_rootRelativePath %>/DeploymentMetadata/ui.xml"]
}